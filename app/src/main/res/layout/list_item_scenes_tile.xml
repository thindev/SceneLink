<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:paddingStart="12dp"
              android:paddingEnd="12dp"
    >
    <include layout="@layout/list_item_scenes_titlebar"/>
    <include layout="@layout/view_horizontal_divide_line"/>
    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout_scenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:orientation="horizontal"
        app:rowCount="2"
        app:columnCount="2"
        >
        <LinearLayout android:layout_margin="10dp"
            android:layout_width="0dp"
                      android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_height="wrap_content">
<com.makeramen.roundedimageview.RoundedImageView
    android:layout_width="match_parent"
    app:riv_corner_radius="4dp"
    android:layout_height="120dp"
    android:src="@drawable/aa" android:scaleType="centerCrop"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#000"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="中化人民国工地人民国工地历"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:layout_columnWeight="1"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="4dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/bb" android:scaleType="centerCrop"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#000"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="中化人民国工地历历中化人民国中化人民国工地历"/>
        </LinearLayout>
        <LinearLayout android:layout_margin="10dp"
                      android:orientation="vertical"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="4dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/cc" android:scaleType="centerCrop"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#000"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="中化人民国工地历历中化人民国中化人民国工地历"/>
        </LinearLayout>
        <LinearLayout android:layout_margin="10dp"
            android:layout_width="0dp"
                      android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="4dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/aa" android:scaleType="centerCrop"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#000"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="中化人民国工地历历中化人民国中化人民国工地历"/>
        </LinearLayout>

    </android.support.v7.widget.GridLayout>
<include layout="@layout/view_horizontal_divide_line"/>
    <Button
        android:id="@+id/button_more"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:text="更多..."
       />
</LinearLayout>