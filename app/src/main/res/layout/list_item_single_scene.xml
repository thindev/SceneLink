<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:paddingTop="14dp"
              android:paddingBottom="14dp"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/image_scene"
            android:layout_width="128dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp">
            <TextView
                android:id="@+id/tv_scene_name"
                android:text=""
                android:textStyle="bold"
                android:maxLines="2"
                android:textSize="16sp"
                android:textColor="@color/titleColor_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="6dp"
                android:layout_gravity="right|top">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_group" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:text="48"
                    android:textColor="@color/itemIconInactiveColor"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_scene_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="12月24日 19:32"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_scene_address"
                android:textAlignment="gravity"
                android:gravity="left"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>