<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.calenstudio.scenelink.view.MainActivity">
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_scene"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_size"
        android:background="@color/splitLineColor"
        />
    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:bnbMode="mode_default"
        app:bnbInactiveColor="@color/itemIconInactiveColor"
        app:bnbBackgroundColor="@color/navigationBarBackground"
        />

</LinearLayout>
